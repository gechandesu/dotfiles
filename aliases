# Навигация

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias cls='clear'
alias \.\.='cd ..'
alias size='du -h --max-depth=1' # Узнать размер папки или файла



# Запуск программ

alias py='python3'
alias pym='python3 -m' # запустить модуль python как скрипт



# Работа с пакетами

alias destroy='sudo apt remove --purge -y'



